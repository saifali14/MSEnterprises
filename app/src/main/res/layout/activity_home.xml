<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/yellop">



    <RelativeLayout
        android:id="@+id/home_header"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/yellow_home"
        android:elevation="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MS Enterprises"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_black"
            android:textSize="22sp"/>



        <ImageView
            android:id="@+id/home_settingbtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/setting_icon"
            android:layout_marginEnd="20dp" />





    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_header"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:id="@+id/home_namerel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/home_hellotext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello,"
                    android:textSize="25sp"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/gray"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/home_nametext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saif Ali Shaikh"
                    android:textColor="@color/gray"
                    android:layout_below="@id/home_hellotext"
                    android:fontFamily="@font/lato_black"
                    android:textSize="27sp"
                    android:layout_marginTop="5dp"/>


                <TextView
                    android:id="@+id/home_datetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fri, 26 May"
                    android:layout_below="@id/home_nametext"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/gray"
                    android:layout_marginTop="5dp"/>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/home_imagerel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_namerel"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"

                android:layout_marginTop="10dp">


                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/home_imageslider"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />





                <View
                    android:id="@+id/home_upperstrokeview"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/home_imageslider"
                    android:layout_marginTop="15dp"
                    android:background="@color/black"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="100dp"/>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_imagerel"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/adminborder"
                >



                <View
                    android:id="@+id/home_lowerstrokeview"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginStart="150dp"
                    android:layout_marginEnd="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"/>






                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/home_lowerstrokeview"
                    android:orientation="vertical"
                    android:layout_margin="10dp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/home_reportcard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="5dp"
                        >


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="20dp"
                            android:padding="25dp"
                            android:background="@color/light_skin">

                            <TextView
                                android:id="@+id/homecard_helphead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="How can we help you"
                                android:textSize="18sp"
                                android:textColor="@color/gray"
                                android:fontFamily="@font/lato_black"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="if you have any issue just contact us and write down you issue."
                                android:layout_below="@id/homecard_helphead"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="20dp"
                                android:textSize="15sp"
                                android:fontFamily="@font/lato_bold"
                                android:textColor="@color/light_grey"
                                android:layout_toStartOf="@id/homecard_helpimage"
                                />



                            <ImageView
                                android:id="@+id/homecard_helpimage"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/homecard_yellow"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:alpha="0.7"/>


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/home_preprojectcard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="5dp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="20dp"
                            android:padding="25dp"
                            android:background="@color/light_voilet">

                            <TextView
                                android:id="@+id/homecard_preprojecttextview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Our previous projects"
                                android:textSize="18sp"
                                android:textColor="@color/gray"
                                android:fontFamily="@font/lato_black"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Glimpse of the projects that we have worked on."
                                android:layout_below="@id/homecard_preprojecttextview"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="20dp"
                                android:textSize="15sp"
                                android:fontFamily="@font/lato_bold"
                                android:textColor="@color/light_grey"
                                android:layout_toStartOf="@id/homecard_preproimage"
                                />



                            <ImageView
                                android:id="@+id/homecard_preproimage"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/preproimage"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:alpha="0.7"/>


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:id="@+id/home_facilitycard"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="5dp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="20dp"
                            android:padding="25dp"
                            android:background="@color/light_red">

                            <TextView
                                android:id="@+id/homecard_facilitytxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Facilities we provide"
                                android:textSize="18sp"
                                android:textColor="@color/gray"
                                android:fontFamily="@font/lato_black"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="We provide top notch quality work for our client. And these are some of them."
                                android:layout_below="@id/homecard_facilitytxt"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="20dp"
                                android:textSize="15sp"
                                android:fontFamily="@font/lato_bold"
                                android:textColor="@color/light_grey"
                                android:layout_toStartOf="@id/homecard_faciligyimage"
                                />



                            <ImageView
                                android:id="@+id/homecard_faciligyimage"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/facilityimage"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:alpha="0.7"/>


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>








                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>



    </ScrollView>


</RelativeLayout>