<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NameInfoActivity">


    <ImageView
        android:id="@+id/info_headerimg"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/infonameimg"
        android:layout_alignParentTop="true"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/info_headerimg">


        <TextView
            android:id="@+id/info_welcom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>




        <LinearLayout
            android:id="@+id/infotandp_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_welcom"
            android:layout_alignStart="@id/info_welcom"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By clicking on the submit button you are accepting"
                android:textSize="15sp"
                android:textColor="@color/light_grey" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/infoname_tandtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms and Conditions"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/light_voilet" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" And "
                    android:textSize="15sp"
                    android:textColor="@color/light_grey" />

                <TextView
                    android:id="@+id/infoname_pptxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/light_voilet" />

            </LinearLayout>



        </LinearLayout>



        <TextView
            android:id="@+id/infoname_namehead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name:"
            android:layout_below="@id/infotandp_layout"
            android:layout_marginTop="40dp"
            android:layout_alignStart="@id/inof_nameedxt"
            android:textStyle="bold"
            android:textColor="@color/light_grey"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"/>


        <EditText
            android:id="@+id/inof_nameedxt"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/phoneauthedxtbg"
            android:layout_below="@id/infoname_namehead"
            android:hint="Type your name"

            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:textColor="@color/black"
            android:textColorHint="#606060"
            />


        <Button
            android:id="@+id/info_submitbtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/inof_nameedxt"
            android:layout_centerHorizontal="true"
            android:text="Submit"
            android:backgroundTint="@color/btn_color"/>



    </RelativeLayout>
        


</RelativeLayout>